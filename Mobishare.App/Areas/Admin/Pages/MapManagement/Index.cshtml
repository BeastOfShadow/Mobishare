@page
@model Mobishare.App.Areas.Admin.Pages.MapManagement.IndexModel
@{
}

<h3>Map Management - Operations Overview</h3>
<div class="box pt-2 ps-2">
    <div class="row mb-3">
        <div class="col-sm-12">
            <h4 class="mt-2">Available Operations</h4>
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="/Admin/MapManagement/ManageCity" class="operation-box">
                        <h5>Manage Cities</h5>
                        <p class="mb-0">
                            Create, edit or delete city entries. Each city can have its own group of parking slots and
                            specific settings.
                        </p>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="/Admin/MapManagement/ManageParkingSlot" class="operation-box">
                        <h5>Manage Parking Slots</h5>
                        <p class="mb-0">
                            Add or modify parking slot positions on the map. These are the locations where users can
                            park or find vehicles.
                        </p>
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="/Admin/MapManagement/VisualizeMap" class="operation-box">
                        <h5>Map Visualization</h5>
                        <p class="mb-0">
                            View all cities and parking slots on a single interactive map. Useful for checking slot
                            distribution.
                        </p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>