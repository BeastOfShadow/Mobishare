<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mobishare.App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Mobishare.App.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user_logged_home.css">
</head>

<body>
    <header>
        @if (!Context.Request.Path.StartsWithSegments("/Identity/Account"))
        {
            <partial name="_NavbarPartial" />
        }
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!--<footer class="border-top footer text-muted">
        @if (!Context.Request.Path.StartsWithSegments("/Identity/Account"))
        {
            <partial name="_FooterPartial" />
        }
    </footer>-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script src="~/js/maps.js"></script> *@
    <script src="~/js/user_logged_home.js" type="text/javascript" ></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDI3u3QKHyX8IOdXXAZH3_jUIGDJZWPyME"></script>
    <script src="~/js/vehicleType.js" asp-append-version="true"></script>
    <script src="~/js/maps.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>