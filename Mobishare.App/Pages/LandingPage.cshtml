@page
@model Mobishare.App.Pages.MainModel
@{
    ViewData["Title"] = "Main Page";
}

<div class="container-fluid p-0 app-container">
        <div class="row g-0 h-100">
            <!-- Left Column (Map + Form) -->
            <div class="col-md-9 left-column">
                <!-- Map -->
                <div class="map-container">
                    <!--<div class="map-placeholder" id="map-placeholder">
                         Map With Current Location Here                    
                    </div> -->
                    <div id="map"></div>

                    
                    <!-- Current Location box-->
                    <div class="current-location" id="label">
                        <div class="location-dot"></div>
                        <span id="locationLabel">Current Location: Loading</span>
                    </div>
                </div>
                
                <!-- Vehicle Code Form -->
                <div class="bike-code-form">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <input type="text" id="bikeCode" class="form-control" placeholder="Enter bike code (e.g. 123...)">
                            <div id="errorMessage" class="error-message">Invalid bike code. Please check and try again.</div>
                        </div>
                        <div class="col-auto">
                            <button id="startTravelBtn" class="btn btn-success">Start Travel</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Travel History-->
            <div class="col-md-3 travels-container">
                <div class="travels-header">
                    <h5 class="mb-0">Your Travels</h5>
                </div>
                
                <div class="p-2">
                    <!-- Travel Card 1 -->
                    <div class="card travel-card">
                        <div class="card-body">
                            <h6 class="card-title mb-2">Morning Commute</h6>
                            <div class="travel-info">
                                <div class="label">Start:</div>
                                <div class="value">Central Park Station</div>
                            </div>
                            <div class="travel-info">
                                <div class="label">End:</div>
                                <div class="value">Downtown Office Hub</div>
                            </div>
                            <div class="travel-info">
                                <div class="label">Duration:</div>
                                <div class="value">25 minutes</div>
                            </div>
                            <div class="travel-date">April 23, 2025 - 08:15 AM</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
